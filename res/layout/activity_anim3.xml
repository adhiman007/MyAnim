<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_centerInParent="true"
        android:background="@drawable/fq_quick_change_pressed"
        android:gravity="top|center"
        android:paddingTop="40dip"
        android:text="0"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="开始" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="停止" />

    <com.song.myAnim.customer.view.BatteryView
        android:id="@+id/my_battery_progress"
        style="?android:attr/progressBarStyle"
        android:padding="5dip"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_centerVertical="true"
        android:indeterminateDrawable="@drawable/myprogress2"
        android:max="10000" />
    
    <ProgressBar
        android:id="@+id/my_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:visibility="invisible"
		android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/myprogress"
        android:max="10000" />
    
    
    

</RelativeLayout>
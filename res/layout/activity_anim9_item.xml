<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="39px"
    android:minHeight="39px"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/item_code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" >

        <TextView
            android:id="@+id/dzh_delete_item_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="哈哈哈"
            android:paddingLeft="20dip"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_code_layout"  >

        <TextView
            android:id="@+id/dzh_delete_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="哈哈哈"
            android:paddingLeft="20dip"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/dzh_delete_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:layout_marginRight="10dip"
        android:background="@drawable/win_item_delete"
        />

    <ImageView
        android:id="@+id/move_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/dzh_delete_item_delete"
        android:clickable="true"
        android:background="@drawable/edit_move"
        />

</RelativeLayout>